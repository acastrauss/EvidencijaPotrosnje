
@{
    ViewBag.Title = "Import";

    var wFiles = (List<string>)ViewBag.wFiles;
    var cFiles = (List<string>)ViewBag.cFiles;
}

<h2>Import</h2>

<form method="post" action="/Import/Import">
    <select name="weatherFile" multiple >
        @if (wFiles != null)
        {
            foreach (var file in wFiles)
            {
                <option value="@file">@file</option>
            }
        }
    </select>


    <select name="stateName" multiple>
        @if (cFiles != null)
        {
            foreach (var file in cFiles)
            {
                <option value="@file">@file</option>
            }
        }
    </select>

    <input type="date" name="startDate" required/>
    <input type="date" name="endDate" required/>

    <input type="submit" value="Import" />
</form>
<label>@ViewBag.ErrorMessage</label>

